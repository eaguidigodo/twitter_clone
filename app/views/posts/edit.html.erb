<p> <%= notice %> </p>
<div class="tweetBox">
<%= form_with(model: @post, local: true) do |form| %>

    <div class="tweetBox">
      <%= form.text_field :content %>
    </div>
    <%= form.submit %>
  <% end %>
</div>


<div>
<% if @post.errors.any? %>
<div id="error_explanation">
    <h2><%=@post.errors.count %> There are errors! </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
</div>